<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="@color/activity_text_color"
            android:background="@color/button_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/settings_buffor_duration_string"
                android:textColor="@color/activity_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buffor_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_decrease"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>

                <EditText
                    android:id="@+id/buffor_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="@string/settings_value"
                    android:textColor="@color/activity_text_color" />

                <Button
                    android:id="@+id/buffor_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_increase"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/settings_intervals_string"
                android:textColor="@color/activity_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/interval_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_decrease"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>

                <EditText
                    android:id="@+id/interval_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="@string/settings_value"
                    android:textColor="@color/activity_text_color" />

                <Button
                    android:id="@+id/interval_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_increase"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/settings_intervals_duration_string"
                android:textColor="@color/activity_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/interval_duration_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_decrease"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>

                <EditText
                    android:id="@+id/interval_duration_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="@string/settings_value"
                    android:textColor="@color/activity_text_color" />

                <Button
                    android:id="@+id/interval_duration_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_increase"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/settings_break_duration_string"
                android:textColor="@color/activity_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/break_duration_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_decrease"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>

                <EditText
                    android:id="@+id/break_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="@string/settings_value"
                    android:textColor="@color/activity_text_color" />

                <Button
                    android:id="@+id/break_duration_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_increase"
                    android:textColor="@color/activity_text_color"
                    android:background="@color/button_color"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>