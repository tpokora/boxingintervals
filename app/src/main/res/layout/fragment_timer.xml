<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/interval_counter_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/timer_fragment_interval_counter_title_font_size"
        android:textAlignment="center"
        android:text="Interval #1"/>

    <TextView
        android:id="@+id/interval_counter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/timer_fragment_interval_counter_font_size"
        android:textAlignment="center"
        android:text="00:03:00"/>

</LinearLayout>