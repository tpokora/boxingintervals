<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timer_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buffor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timer_fragment_buffor_font_size"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/interval_counter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timer_fragment_interval_counter_title_font_size"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/interval_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timer_fragment_interval_counter_font_size"
        android:textAlignment="center"
        android:text="00:03:00"/>

    <TextView
        android:id="@+id/break_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timer_fragment_break_title_font_size"
        android:textAlignment="center"
        android:text="Break"/>

    <TextView
        android:id="@+id/break_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timer_fragment_break_timer_font_size"
        android:textAlignment="center"
        android:text="20 s"/>

</LinearLayout>